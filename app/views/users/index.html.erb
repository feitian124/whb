<p id="notice"><%= notice %></p>

<h3>正在关注: <%= @users.count %>, 已取消: <%= @unsubscribed.count %></h3>

<ul class="small-block-grid-3">
<% @users.each do |user| %>
  <li>
    <ul>
      <li><b><%= user.nickname %></b></li>
      <li><%= user.subscribe_time %></li>
      <li><%= user.sex %>, 海报: <%= user.albums.count %></li>
      <li><%= user.city %>, <%= user.province %></li>
      <li>
        <span><%= link_to '详情', user %></span>
        <span><%= link_to '编辑', edit_user_path(user) %></span>
        <span><%= link_to '删除', user, method: :delete, data: { confirm: '确定删除该用户?' } %></span>
        <span><%= link_to '相册', user_albums_path(user) %></span>
      </li>
    </ul>
  </li>
<% end %>
</ul>
