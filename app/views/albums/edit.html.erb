<div id="fullpage" class="text-center">
  <% @album.images.each do |image| %>
    <% src =  image.src.blank? ? image.pic_url : image.src %>
    <div class="section"><img src="<%= src %>"></div>
  <% end %>
</div>

<div class="album arrow-wrapper animated fadeOutUp">
  <p class="arrow"></p>
</div>

<div class="album menus">
  <div class="menu">
    <a id="tpl" href="#" class="btn">模板</a>
  </div>
  <div class="menu">
    <a id="music" href="#" class="btn">音乐</a>
  </div>
  <div class="menu">
    <a id="pics" href="#" class="btn">相册</a>
  </div>
  <div class="menu">
    <a id="title" href="#" class="btn">标题</a>
  </div>
</div>

<div class="select-layer">
  <div class="title-bar">
    <h1 class="title"></h1>
    <span class="cancel">X</span>
  </div>
  <div class="listWrapper">
    <ul class="list-tpl hide"></ul>
    <ul class="list-music hide"></ul>
    <ul class="list-photo hide "></ul>
    <ul class="list-title hide"></ul>
  </div>
</div>

<div class="audio-box" style="display: none">
  <audio id="myaudio" src="/musics/shenshi.m4a" loop="loop" autoplay="autoplay" controls="controls">
    你的浏览器不支持HTML5
  </audio>
  <input type="button" onclick="document.getElementById('myaudio').play()" value='播放' id="play-btn"  />
  <input type="button" onclick="document.getElementById('myaudio').pause()" value='停止' id="pause-btn" />
</div>
<a class="music-icon music-trigger play icon-rotate" href="javascript:;"></a>

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', user_albums_path(@album.user) %>
